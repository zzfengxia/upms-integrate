<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <property name="appName" value="upms-web"/>
    <property name="logDir">/app/biz_logs/${appName}</property>

    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyy-MM-dd HH:mm:ss.SSS} [%t] %-5level %class{50}\(%line\) - %msg%n</pattern>
        </encoder>
    </appender>

    <appender name="catalina" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <File>${logDir}/catalina/catalina.log</File>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeBasedTriggeringPolicy">
            <!-- size rollover -->
            <FileNamePattern>${logDir}/catalina/catalina-%i.log</FileNamePattern>
            <MaxFileSize>50MB</MaxFileSize>
        </rollingPolicy>
        <encoder>
            <charset>UTF-8</charset>
            <Pattern>%d{yyy-MM-dd HH:mm:ss.SSS} [%t] %-5level %class{20}\(%line\) - %msg%n</Pattern>
        </encoder>
    </appender>

    <appender name="web" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <File>${logDir}/${appName}.log</File>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!-- daily rollover -->
            <FileNamePattern>${logDir}/${appName}.log.%d{yyyy-MM-dd}</FileNamePattern>
        </rollingPolicy>
        <encoder>
            <charset>UTF-8</charset>
            <Pattern>%d{yyy-MM-dd HH:mm:ss.SSS} [%t] %-5level %class{20}\(%line\) - %msg%n</Pattern>
        </encoder>
    </appender>

    <!--<logger name="com.zz.upms" level="DEBUG" additivity="false">
        <appender-ref ref="web"/>
    </logger>-->

    <root level="info">
        <appender-ref ref="CONSOLE"/>
    </root>
</configuration>